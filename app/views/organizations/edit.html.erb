<% content_for :header do %>
    <%= render partial: 'shared/header', locals: {current: :organizations} %>
<% end %>

<h1>Editing Organization</h1>

<%= render 'form', organization: @organization %>

<h1>Editing Users</h1>

<% @organization.assignments.each do |a| %>
    <%= a.user.email %>
    <%= link_to 'Destroy', organization_delete_assignment_path(@organization,a), method: :delete, data: {confirm: 'Are you sure?'} unless a.user == current_user %>
<% end %>

<%= form_tag organization_invit_path(@organization), method: :post do %>
    <%= email_field_tag :email %>
    <%= submit_tag :add %>
<% end %>

<%= link_to 'Back', organization_path(@organization) %>
