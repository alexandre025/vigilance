<header class="navbar">
  <div class="nav navbar-header">
    <%= link_to t(:app_title), root_path, class: 'navbar-brand' %>
  </div>

  <ul class="nav navbar-left">
    <% if user_signed_in? %>

    <% end %>
  </ul>


  <%= form_tag search_path(), method: :post, class: 'nav navbar-form' do %>
      <div class="form-group">
        <%= text_field_tag :q, @search_keywords, placeholder: t(:search), class: 'form-control' %>
      </div>
  <% end %>


  <ul class="nav navbar-right">
    <li>
      <a href="<%= saved_contents_path %>">
        <i class="material-icons">history</i> <%= t('saved_to_read') %>
      </a>
    </li>
    <% if user_signed_in? %>
        <%= content_tag :li, (link_to t(:sign_out), destroy_user_session_path, method: :delete) %></li>
    <% else %>

    <% end %>
  </ul>

</header>