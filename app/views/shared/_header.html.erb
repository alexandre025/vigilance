<header class="navbar navbar-primary">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to t(:app_title), root_path, class: 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-left">
        <% if user_signed_in? %>
            <%= content_tag :li ,(link_to t(:organizations), organizations_path), class: ('active' if current == :organizations) %>
            <% if @organization.try(:id) %>
                <%= content_tag :li, (link_to t(:tags), organization_tags_path(@organization)), class: ('active' if current == :tags) %></li>
            <% else %>

            <% end %>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <%= content_tag :li, (link_to t(:sign_out), destroy_user_session_path, method: :delete) %></li>
        <% else %>

        <% end %>
      </ul>
    </div>
  </div>
</header>